{
    "audio": "pipewire",
    "bootloader": "systemd-bootctl",
    "filesystem": "ext4",
    "gfx_driver": "VMware / VirtualBox (open-source)",
    "harddrive": { "path": "/dev/sda" },
    "hostname": "arch",
    "kernels": [ "linux" ],
    "keyboard-language": "us",
    "mirror-region": "Worldwide",
    "nic": { "NetworkManager": true },
    "ntp": true,
    "packages": [
        "docker",
        "zsh", "neovim", "rsync", "wget", "git", "htop",
        "rxvt-unicode", "ranger", "rofi", "dmenu", "kitty",
        "papirus-icon-theme"
    ],
    "profile": "i3",
    "services": ["docker"],
    "superusers": {
        "igorlg": {
            "!password": "igorlg"
        }
    },
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "timezone": "Australia/Sydney",
    "users": {},
    "custom-commands": [
        "cd /home/igorlg; git clone https://aur.archlinux.org/paru.git",
        "chown -R igorlg:igorlg /home/igorlg/paru",
        "usermod -aG docker igorlg"
    ]
}
